{% extends 'base.html.twig' %}

{% block title %}Edit Cotisation
{% endblock %}

{% block body %}

	{% if cotisation.resteMontant == 0 %}
		<h1>Attention
			{{cotisation.membre.nom}}
			{{cotisation.membre.prenom}}
			a soldé</h1>
		<h3>
			Si vous voulez modifier, veuillez entrer le montant qui lui est a payé
		</h3>
	{% else %}
		<p>
			il lui reste a paye
			<span class="text-primary">
				{{cotisation.resteMontant}}
			</span>
		</p>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning">
				{{ message }}
			</div>
		{% endfor %}
	{% endif %}

	{{ include('cotisation/_form.html.twig', {'button_label': 'Update'}) }}

	<a href="{{ path('cotisation_index') }}">back to list</a>

	{{ include('cotisation/_delete_form.html.twig') }}
{% endblock %}
