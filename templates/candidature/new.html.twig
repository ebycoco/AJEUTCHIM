{% extends 'base.html.twig' %}

{% block title %}New Candidature
{% endblock %}

{% block body %}
	<div class="container mb-3">
		<h1>Create new Candidature</h1>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning">
				{{ message }}
			</div>
		{% endfor %}
		{{ form_start(form) }}
		<div class="form-row">
			<div class="col">
				{{form_row(form.nom)}}
			</div>
			<div class="col">
				{{form_row(form.prenom)}}
			</div>
		</div>
		<div class="form-group row">
			<div class="col-8 mx-auto">
				{{form_row(form.matriculeAjeutchim)}}
			</div>
		</div>
		<div class="form-row">
			<div class="col">
				{{form_row(form.imageFile)}}
			</div>
			<div class="col">
				{{form_row(form.imageProgrammeFile)}}
			</div>
		</div>
		<div class="form-row align-items-center">
			<button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
