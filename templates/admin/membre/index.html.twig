{% extends 'baseAdmin.html.twig' %}

{% block title %}Membre index
{% endblock %}

{% block body %}
	<div
		class="content-page">
		<!-- Start content -->
		<div class="content">
			<div class="container-fluid">
				<div class="page-title-box">
					<div class="row align-items-center">
						<div class="col-sm-6">
							<h4 class="page-title">Administration</h4>
							<ol
								class="breadcrumb">
								<!-- <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="mdi mdi-home-outline"></i></a></li> -->
								<li class="breadcrumb-item active">Liste complete d'AJEUTCHIM</li>
							</ol>
						</div>
						<div class="col-sm-3">
							<a class="btn btn-primary" href="{{ path('membre_new') }}">Ajouter un membre</a>

						</div>

					</div>
					<!-- end row -->
				</div>
				<!-- end page-title -->
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-12 mb-4">
										<h4 class="mt-0 mb-5 header-title text-center">Dernier membre ajouter</h4>
										{% for message in app.flashes('success') %}
											<div class="alert alert-success alert-dismissible fade show" role="alert">
												<strong>Bien jour !</strong>
												{{ message }}
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
										{% endfor %}
										<div class="row mt-3">
											{% for derniermembre in derniermembres %}
												<div class="col">
													<h4 class="mt-0 header-title">ID :
														<span class=" text-center text-capitalize">{{derniermembre.id}}</span>
													</h4>
													<h4 class="mt-0 header-title">Nom :
														<span class=" text-center text-capitalize">{{derniermembre.nom}}</span>
													</h4>
													<h4 class="mt-0 header-title">Prenom :
														<span class=" text-center text-capitalize">{{derniermembre.prenom}}</span>
													</h4>
												</div>
												<div class="col">
													<h4 class="mt-0 header-title">Matricule :
														<span class=" text-center text-capitalize">{{derniermembre.referenceAjeutchim}}
														</span>
													</h4>
													<h4 class="mt-0 header-title">Contact :
														<span class=" text-center text-capitalize">{{derniermembre.contact}}
														</span>
													</h4>
													<h4 class="mt-0 header-title">Email :
														<span class=" text-center">{{derniermembre.email}}</span>
													</h4>
												</div>
											{% endfor %}
										</div>

									</div>
								</div>
								<div class="row">
									<div class="col">
										<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

											<thead class="thead-dark">
												<tr>
													<th scope="col">Matricule</th>
													<th scope="col">Nom</th>
													<th scope="col">Prenom</th>
													<th scope="col">Année d'adhésion</th>
													<th scope="col">actions</th>
												</tr>
											</thead>
											<tbody>
												{% for membre in membres %}

													<tr>

														<th>
															{{ membre.referenceAjeutchim }}
														</th>
														<td>{{ membre.nom }}</td>
														<td>{{ membre.prenom }}</td>
														<td>{{ membre.createdAt ? membre.createdAt|date('d-m-Y') : '' }}</td>
														<td>
															<a href="{{ path('membre_show', {'id': membre.id}) }}" class="btn btn-warning">Voir</a>
															<a href="{{ path('membre_edit', {'id': membre.id}) }}" class="btn btn-info">Modifier</a>
														</td>
													</tr>

												{% else %}
													<tr>
														<td colspan="11">no records found</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>

									</div>
								</div>

							</div>
						</div>
					</div>
					<!-- end col -->
				</div>
				<!-- end row -->
			</div>
			<!-- container-fluid -->
		</div>
		<!-- content -->
		{{ include('includes/_footer_admin.html.twig')}}
	</div>
{% endblock %}
