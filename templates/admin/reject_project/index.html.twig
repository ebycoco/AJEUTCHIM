{% extends 'baseAdmin.html.twig' %}

{% block title %}RejectProject index
{% endblock %}

{% block body %}
	<div
		class="content-page">
		<!-- Start content -->
		<div class="content">
			<div class="container-fluid">
				<div class="page-title-box">
					<div class="row align-items-center">
						<div class="col-sm-6">
							<h4 class="page-title">Administration</h4>
							<ol
								class="breadcrumb">
								<!-- <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="mdi mdi-home-outline"></i></a></li> -->
								<li class="breadcrumb-item active">Vous Ãªtre dans Produits</li>
							</ol>
						</div>
						<div class="col-sm-3">
							<a class="btn btn-primary" href="{{ path('reject_project_new') }}">Ajouter un produit</a>
						</div>
					</div>
					<!-- end row -->
				</div>
				<!-- end page-title -->
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h4 class="mt-0 header-title">Commande</h4>
										<p class="text-muted mb-4">
											Liste des commandes en attente
										</p>
									</div>
								</div>
								<div class="row">
									<div class="col">
										{% for message in app.flashes('success') %}
											<div class="alert alert-success">
												{{ message }}
											</div>
										{% endfor %}
										{% for message in app.flashes('info') %}
											<div class="alert alert-info">
												{{ message }}
											</div>
										{% endfor %}
										{% for message in app.flashes('danger') %}
											<div class="alert alert-danger">
												{{ message }}
											</div>
										{% endfor %}
										{% for message in app.flashes('warning') %}
											<div class="alert alert-warning">
												{{ message }}
											</div>
										{% endfor %}
										<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
											<thead>
												<tr>
													<th>Id</th>
													<th>Motif</th>
													<th>actions</th>
												</tr>
											</thead>
											<tbody>
												{% for reject_project in reject_projects %}
													<tr>
														<td>{{ reject_project.id }}</td>
														<td>{{ reject_project.motif }}</td>
														<td>
															<a href="{{ path('reject_project_show', {'id': reject_project.id}) }}">show</a>
															<a href="{{ path('reject_project_edit', {'id': reject_project.id}) }}">edit</a>
														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="3">no records found</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- end col -->
				</div>
				<!-- end row -->
			</div>
			<!-- container-fluid -->
		</div>
		<!-- content -->
		{{ include('includes/_footer_admin.html.twig')}}
	</div>
{% endblock %}
