{% extends 'baseprofile.html.twig' %}

{% block title %}Candidat index
{% endblock %}

{% block body %}
	<div class="form-maj">
		<div class="container personnelle">
			<h1 class="text-primary text-center">
				Sugerer nous un bon projet</h1>
			<div class="row">
				{{ form_start(form) }}
				<div class="form-row">
					<div class="col">
						{{form_row(form.titre)}}
					</div>
					<div class="col">
						{{form_row(form.montant)}}
					</div>
				</div>
				<div class="form-row">
					<div class="col">
						{{form_row(form.description)}}
					</div>
				</div>
				<div class="form-row align-items-center">
					<button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
