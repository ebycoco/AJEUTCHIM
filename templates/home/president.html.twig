<section id="pesi" class="container-fluid reveal">
	<div class="col-12 text-center">
		<div class="blue-divider"></div>
		<div class="heading">
			<h2 aiv="cls: aiv-slide-down; repeat; delay: 500;" class="mt-3">Les Presidents</h2>
		</div>
		<p class="lead">
			Les présidents qui ont dirriger l'AJEUTCHIM depuis sa création le 10 nouvenbre 2019.
		</p>
	</div>
	<div class="container reveal-1">
		<div class="row justify-content-center">
			{% if presidents|length == "1" %}
				{% for president in presidents %}
					<div class="col-md-4 m-md-auto">
						<div class="single-box">
							<div class="img-area">
								<img src="{{ vich_uploader_asset(president, 'imageFile')}}" alt=""/>
							</div>
							<div class="img-text">
								<h2>{{president.membre.prenom}}
								</h2>
								<span class="p">{{president.debutedAt ? president.debutedAt|date('Y') : '' }}
									-
									{{president.finedAt ? president.finedAt|date('Y') : 'en cours'}}</span>
								<p>
									Il a été élu le  10 - 11 - 2020
								</p>
								<a href="#" class="buttonsliderp">Son bureau</a>
							</div>
						</div>
					</div>
				{% endfor %}
			{% elseif presidents|length == "2" %}
				{% for president in presidents %}
					<div class="col-md-4 m-md-auto">
						<div class="single-box">
							<div class="img-area">
								<img src="{{ vich_uploader_asset(president, 'imageFile')}}" alt=""/>
							</div>
							<div class="img-text">
								<h2>{{president.membre.prenom}}
								</h2>
								<span class="p">{{president.debutedAt ? president.debutedAt|date('Y') : '' }}
									-
									{{president.finedAt ? president.finedAt|date('Y') : 'en cours'}}</span>
								<p>
									Il a été élu le  10 - 11 - 2020
								</p>
								<a href="#" class="buttonsliderp">Son bureau</a>
							</div>
						</div>
					</div>
				{% endfor %}
			{% else %}
				<div class="col-md-12">
					<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner">
							{% set activee = "active" %}
							{% for row in presidents|batch(3) %}
								<div class="carousel-item {{activee}}">
									<div class="row">
										{% for president in row %}
											<div class="col-lg-4">
												<div class="single-box">
													<div class="img-area">
														<img src="{{ vich_uploader_asset(president, 'imageFile')}}" alt=""/>
													</div>
													<div class="img-text">
														<h2>{{president.membre.prenom}}
														</h2>
														<span class="p">{{president.debutedAt ? president.debutedAt|date('Y') : '' }}
															-
															{{president.finedAt ? president.finedAt|date('Y') : 'en cours'}}</span>
														<p>
															Il a été élu le  10 - 11 - 2020
														</p>
														<a href="#" class="buttonsliderp">Son bureau</a>
													</div>
												</div>
												{% set activee = " " %}
											</div>
										{% endfor %}
									</div>
								</div>
							{% endfor %}
							<a href="#carouselExampleIndicators" class="carousel-control-prev" role="button" data-slide="prev">
								<span class="fas fa-chevron-left fa-2x"></span>
							</a>
							<a href="#carouselExampleIndicators" class="carousel-control-next" role="button" data-slide="next">
								<span class="fas fa-chevron-right fa-2x"></span>
							</a>
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</section>
