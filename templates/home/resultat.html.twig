{% set acti = 0 %}
{% for candidat in candidats %}
	{% if candidat.vuePublic == 1 %}
		{% set acti = 1 %}
	{% else %}
		{% set acti = 0 %}
	{% endif %}
{% endfor %}
{% if acti == 1 %}
	<section id="resultat" class="container-fluid reveal">
		<div class="col-12 text-center">
			<div class="blue-divider"></div>
			<div class="heading">
				<h2 class="mt-3">Les Resultats</h2>
			</div>
			<p class="lead">
				Les resultats obtenue après le vote
			</p>
		</div>
		<div class="container reveal-1">
			<div class="row justify-content-center">
				{% for candidat in candidats %}
					<div class="col">
						<div class="card">
							<img src="{{ vich_uploader_asset(candidat.candidature, 'imageFile')}}" class="card-img-top" alt="img"/>
							<div class="card-body">
								<div class="row">
									<div class="col">
										<h5 class="card-title">
											{{ candidat.nom }}
											{{ candidat.prenom }}
										</h5>
									</div>
									<div class="col">
										<h5>
											<span class="h4">
												{% if candidat.nombreVoix2 %}
													1er tour :
													{{ candidat.nombreVoix }}
													voix
													<br>
													2ème tour :
													{{ candidat.nombreVoix2 }}
													voix
												{% elseif candidat.nombreVoix %}
													{{ candidat.nombreVoix }}
												{% endif %}


											</span>
										</h5>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endif %}
