{% extends "base.html.twig" %}
{% block title %}Acceuil | AJEUTCHIM
{% endblock %}
{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<strong>Bien jour !</strong>
			{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	{% for message in app.flashes('info') %}
		<div class="alert alert-info alert-dismissible fade show" role="alert">
			<strong>Pour votre information !</strong>
			{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	{% for message in app.flashes('danger') %}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<strong>Attention !</strong>
			{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	{% for message in app.flashes('warning') %}
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>Attention !</strong>
			{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	<!-- Image Carousel -->
	<div
		id="carousel" class="carousel slide" data-ride="carousel" data-interval="6500">
		<!-- Carousel Content -->
		<div class="carousel-inner ">
			<div class="carousel-item active reveal">
				<img src="img/carousel/1.jpg" alt="" class="w-100"/>
				<div class="carousel-caption ">
					<div class="container">
						<div class="row justify-content-center">
							<div class="col-8 bg-custom d-none d-md-block py-3 px-0 reveal-2">
								<h1>AJEUTCHIM</h1>
								<div class="border-top border-primary w-50 mx-auto my-3"></div>
								<h3 class="pb-3">Notre mission la cohésion sociale</h3>
								<a href="#" class="buttonsliderd mr-2">View Demo</a>
								<a href="#" class="buttonsliderp ml-2">Start Now</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="carousel-item reveal">
				<img src="img/carousel/2.jpg" alt="" class="w-100"/>
				<div class="carousel-caption">
					<div class="container">
						<div class="row justify-content-end text-right">
							<div class="col-5 bg-custom d-none d-lg-block py-3 px-0 pr-3 reveal-5">
								<p class="lead pb-3">
									La main dans la main participons tous pour le developpement de TCHIMOUKRO
								</p>
								<a href="#" class="buttonsliderd">See phone</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="carousel-item reveal">
				<img src="img/carousel/3.jpg" alt="" class="w-100"/>
				<div class="carousel-caption">
					<div class="container">
						<div class="row justify-content-start text-left">
							<div class="col-7 bg-custom d-none d-lg-block py-3 px-0 pl-3 reveal-7">
								<h3 class="pb-3">Notre slogan</h3>
								<p class="lead">Unie plus que jamais</p>
								<a href="#" class="buttonsliderp">See tablet</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Carousel Content -->

		<!-- Previous & Next Buttons -->
		<a href="#carousel" class="carousel-control-prev" role="button" data-slide="prev">
			<span class="fas fa-chevron-left fa-2x"></span>
		</a>
		<a href="#carousel" class="carousel-control-next" role="button" data-slide="next">
			<span class="fas fa-chevron-right fa-2x"></span>
		</a>
		<!-- End Previous & Next Buttons -->
	</div>
	<!-- End Image Carousel -->

	<!--  info panel-->
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-10 info-panel">
				<div class="row">
					{% for bureau in bureaux %}
						{% if bureau.postAjeutchim.name == "Président" %}
							<div class="col-lg">
								<img src="img/employee.png" alt="employee" class="float-left"/>
								<h4>Président</h4>
								<p>{{ bureau.membre.nom }}
									{{ bureau.membre.prenom }}</p>
							</div>
						{% elseif bureau.postAjeutchim.name == "Vice-présidente" %}
							<div class="col-lg">
								<img src="img/hires.png" alt="employee" class="float-left"/>
								<h4>Vice-présidente</h4>
								<p>{{ bureau.membre.nom }}
									{{ bureau.membre.prenom }}</p>
							</div>
						{% elseif bureau.postAjeutchim.name == "Secrétaire général" %}
							<div class="col-lg">
								<img src="img/security.png" alt="employee" class="float-left"/>
								<h4>Secrétaire général</h4>
								<p>{{ bureau.membre.nom }}
									{{ bureau.membre.prenom }}</p>
							</div>
							{% else %}
						{% endif %}
					{% endfor %}


				</div>
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-12  mt-3">
							<div class="row">
								<div class="col">
									{% set activ = 0 %}
									{% for vote in votes %}
										{% if vote.etat == 1 %}
											{% set activ = 1 %}
											{% else %}
										{% endif %}
									{% endfor %}
									{% if activ == 1 %}
										<a href="#vote" class="button1 " role="button" data-toggle="collapse">Voter</a>
										{% else %}
									{% endif %}
								</div>
								<div class="col-6">
									<a href="#adhession" class="button1" role="button" data-toggle="collapse">Demande d'adhésion</a>
								</div>
								<div class="col">

									{% set activee = 0 %}
									{% for desactiver in desactiver %}
										{% if desactiver.etat == 1 %}
											{% set activee = 1 %}
											{% else %}
										{% endif %}
									{% endfor %}
									{% if activee == 1 %}
										<a href="{{path('app_register')}}" class="button1" role="button" data-toggle="collapse">S'inscrire</a>
										{% else %}
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- fin info panel-->
	<div class="collapse mt-5" id="vote">
