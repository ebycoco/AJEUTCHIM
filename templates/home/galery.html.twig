<section id="galery" class="container-fluid reveal">
	<div class="col-12 text-center">
		<div class="blue-divider"></div>
		<div class="heading">
			<h2 class="mt-3">GALERY</h2>
		</div>
		<p class="lead">
			Les plus belle photo de l'AJEUTCHIM
		</p>
	</div>
	<!-- Three Column Section -->
	<div class="container">
		{% for row in galeries|batch(3)  %}
			<div class="row my-5">
				{% for galerie in row %}
					<div class="col-md-4 mb-3 reveal-1 bg-white rounded  article">
						<div class="mw-100 overflow-hidden">
							<img src="{{ vich_uploader_asset(galerie, 'imageFile')|imagine_filter('article')}}" alt=" {{galerie.titre}} " class="rounded mx-auto d-block w-100"/>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
		<div class="row">
			<div class="col text-center">
				<a href="{{path('galery_liste')}}" class="btn btn-primary">
					<i class="fa fa-plus" aria-hidden="true"></i>
				</a>
			</div>
		</div>
	</div>
</section>
